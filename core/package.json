  "license": "MIT",
  "homepage": "https://github.com/rec-math/rec-math",
  "files": [
    "index.*",
    "types"
  ],
  "scripts": {
    "build": "npm run build:clean && rollup -c && tsc -p tsconfig.types.json",
    "build:clean": "rimraf types index.* -g",
